{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang build main.cpp",
            "command": "time",
            "args": [
                "/usr/bin/clang++",
                "-g",
                "-std=c++17",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}